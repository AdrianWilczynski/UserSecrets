{
    "name": "user-secrets",
    "displayName": ".NET Core User Secrets",
    "description": "Extension mimicking Visual Studio's \"Manage User Secrets\" functionality.",
    "icon": "img/logo.png",
    "publisher": "adrianwilczynski",
    "repository": {
        "type": "git",
        "url": "https://github.com/AdrianWilczynski/UserSecrets.git"
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        ".NET",
        ".NET Core",
        "C#",
        "CSharp",
        "ASP.NET Core",
        "User Secrets",
        "Secret",
        "Secrets"
    ],
    "activationEvents": [
        "onCommand:extension.manageUserSecrets"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "User Secrets",
                "properties": {
                    "userSecrets.ask": {
                        "type": "boolean",
                        "default": true,
                        "description": "Ask before inserting auto-generated UserSecretsId element into the .csproj file.",
                        "scope": "window"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "extension.manageUserSecrets",
                "title": "Manage User Secrets"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.manageUserSecrets",
                    "when": "resourceScheme == file && resourceExtname == .csproj",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "extension.manageUserSecrets",
                    "when": "resourceScheme == file && resourceExtname == .csproj"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/fs-extra": "^5.0.5",
        "@types/uuid": "^3.4.4",
        "fs-extra": "^7.0.1",
        "uuid": "^3.3.2"
    }
}